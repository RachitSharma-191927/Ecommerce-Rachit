<%- include("../partials/header") %>

<div class="container">
  <h2 class="text-center mt-3">Add Product</h2>
  <div class="product-form">
    <form action="/products" method="POST" autocomplete="off">
      <div class="form-group">
        <input
          type="text"
          name="product[name]"
          placeholder="Give a name to your Product"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="product[image]"
          placeholder="Product's image url"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <select
          class="form-control"
          name="product[category]"
          id="catSelect"
          required
          style="text-transform: capitalize"
        >
          <option>mobile</option>
          <option>clothes</option>
          <option>stationary</option>
        </select>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-6 pr-1">
            <input
              type="number"
              step="1"
              name="product[mrp]"
              placeholder="MRP(Rs)"
              min="0"
              step="100"
              class="form-control"
              required
            />
          </div>
          <div class="col-6 pl-1">
            <input
              type="number"
              step="1"
              name="product[price]"
              placeholder="Selling Price(Rs)"
              min="0"
              step="100"
              class="form-control"
              required
            />
          </div>
        </div>
      </div>
      <button class="btn btn-primary btn-block">Add Product</button>
    </form>
    <a href="/home" class="text-center">Go Back</a>
  </div>
</div>

<%- include("../partials/footer") %>