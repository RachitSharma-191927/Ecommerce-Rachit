<%- include("partials/header") %>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Every Day Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/0eaae9cbe1.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Foundation:wght@500&family=Raleway&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="EkartIcon.jpg">
</head>

<body>
    <div class="main_center">
        <div class="data">

            <div>
                <h1 id="happen">EveryDay Store</h1>
            </div>
            <div style="color:rgb(207, 46, 46);" class="mt-3 p-1">
                <h5> <%=failure%></h5>
             </div>
            <div class="buttons">
                <a href="/login/google" style="text-decoration: none;" class="w-75"><button class="w-100"> <i class="fa fa-google"></i>Sign up
                        with
                        Google</button></a>
                <div>or</div>
                <button data-bs-toggle="modal" data-bs-target="#signUp">Sign up with Email</button>
                <form action="/signin" method="post">
                        <input type="email" id="email" class="w-75" name="email" placeholder="Enter Your Email"
                            required autocomplete="off">
                        <input type="password" id="password" class="w-75" name="password"
                            placeholder="Enter Your Password" required autocomplete="off">
                        <button class="btn bg-black text-white border-white w-50 mt-5">Log In</button>                    
                </form>
            </div>
        </div>
    </div>
</div>
    <div class="modal fade" id="signUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content bg-black text-white">
                <div class="modal-header">
                    <h4 class="modal-title w-100" id="exampleModalLabel">Create Your
                        Account</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/signup" method="post">
                    <div class="modal-body d-flex justify-content-center align-itmes-center flex-column">
                        <input type="text" id="name" name="name" placeholder="Enter Your Name" required>
                        <input type="email" id="email" name="email" placeholder="Enter Your Email" required>
                        <input type="password" id="password" name="password" placeholder="Password" required>
                        <input type="password" id="confirmPassword" name="confirmPassword"
                            placeholder="Confirm Your Password" required>
                        <div class="d-flex justify-content-center">
                            <button class="bg-black text-white border-white">Sign Up</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
            integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
            integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
            crossorigin="anonymous"></script>
</body>

</html>